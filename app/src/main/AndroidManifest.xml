        </activity>
        <activity android:name=".presentation.MainActivity" />
        <activity android:name=".presentation.DonateActivity" />
        <activity android:name=".presentation.DonationsActivity" />
        <activity android:name=".presentation.LoginActivity" />
        <activity android:name=".presentation.ProfileActivity" />
